consts {
N: 8
SIDE: (40 * 2) + 10
MARGIN: 5
BLACK: |0|
WHITE: |255|
GRAY: |128|
}
props {
dimension: N*SIDE + MARGIN*2 ~ N*SIDE + MARGIN*2
background: GRAY
}
logic {
color BLACK
for l in [0,N[
  for c in [0,N[
    if (l + c) % 2 == 0
      fill WHITE
    else
      fill BLACK
    square c * SIDE + MARGIN,l * SIDE + MARGIN SIDE
line 0|0|255
rectangle MARGIN,MARGIN N*SIDE ~ N*SIDE
}
